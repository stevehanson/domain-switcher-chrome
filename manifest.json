{
  "manifest_version": 2,
  "name": "Domain Switcher",
  "short_name": "DomainSwitch",
  "description": "Simplify web development by easily switching domains between specified URL groups.",
  "version": "0.5.2",
  "options_page": "options.html",
  "icons": { "48": "images/icon48.png",
           "128": "images/icon128.png" },
  "background": {
    "scripts": [ "js/vendor/jsuri-1.1.1.min.js", "background.js" ]
  },
  "permissions": [
    "tabs", "http://*/*" , "https://*/*"
  ],
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Domain Switcher",
    "default_popup": "popup.html"
  }
}
